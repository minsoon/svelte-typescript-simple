{
  "include": ["./**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "sourceMap": true
  }
}
